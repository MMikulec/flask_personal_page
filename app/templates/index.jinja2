                main.classList.add("lg:brightness-75");

                pageName.classList.add('hidden');  // Hide the page name
                menuLinks.classList.remove('hidden');  // Show the links

                burger.classList.add('hidden');
                cross.classList.remove('hidden');

                infoBar.classList.add('hidden')
            }
        }
