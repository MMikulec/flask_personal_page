    <script>
        // Function to toggle dark mode
        function toggleDarkMode() {
            // Getting the elements
            const lightIcon = document.getElementById('lightModeIcon');
            const darkIcon = document.getElementById('darkModeIcon');

            // Toggling visibility of the icons
            lightIcon.classList.toggle('hidden');
            darkIcon.classList.toggle('hidden');

            // Check current theme
            const currentTheme = document.documentElement.classList.contains('dark') ? 'dark' : 'light';

            // Toggle the theme and save the preference in localStorage
            if (currentTheme === 'dark') {
                document.documentElement.classList.remove('dark');
                localStorage.theme = 'light';
            } else {
                document.documentElement.classList.add('dark');
                localStorage.theme = 'dark';
            }
        }

        // Set the initial theme on page load
        window.addEventListener('DOMContentLoaded', (event) => {
            // Check user preference
            const userPrefersDark = localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches);

            if (userPrefersDark) {
                document.documentElement.classList.add('dark');
            } else {
                document.documentElement.classList.remove('dark');
            }
        });



        function closeMenu() {
            const menu = document.getElementById('menu');
            const main = document.getElementById('main');
            const burger = document.getElementById('burger');
            const cross = document.getElementById('burger-x');
            const pageName = document.getElementById('page-name');
            const menuLinks = document.getElementById('menu-links');
            const infoBar = document.getElementById('info-bar');

            // Resetting Info Bar
            // infoBar.classList.remove('visible', 'opacity-100');
            infoBar.classList.add('hidden', 'opacity-0');

            // Resetting Menu
            menu.classList.remove('w-72');
            menu.classList.add('w-16');
            menu.classList.remove('hidden');

            // Resetting Main
            main.classList.remove("brightness-75");
            main.classList.remove("lg:brightness-75");

            // Resetting Burger & Cross icons
            burger.classList.remove('hidden');
            cross.classList.add('hidden');

            // Resetting Page Name and Menu Links
            pageName.classList.remove('hidden');
            menuLinks.classList.add('hidden');

            console.log('Menu and Info Bar closed');
        }



        function typeWriter(element, txt, txtIndex = 0, charIndex = 0) {
                if (charIndex < txt[txtIndex].length) {
                    element.innerHTML += txt[txtIndex].charAt(charIndex);
                    setTimeout(() => {
                        typeWriter(element, txt, txtIndex, charIndex + 1);
                    }, speed);
                } else {
                    setTimeout(() => {
                        eraseWriter(element, txt, txtIndex, txt[txtIndex].length - 1);
                    }, 2000);
                }
            }

        function eraseWriter(element, txt, txtIndex, charIndex) {
            if (charIndex >= 0) {
                element.innerHTML = txt[txtIndex].substring(0, charIndex);
                setTimeout(() => {
                    eraseWriter(element, txt, txtIndex, charIndex - 1);
                }, speed);
            } else {
                if (txtIndex < txt.length - 1) {
                    setTimeout(() => {
                        typeWriter(element, txt, txtIndex + 1, 0);
                    }, 2000);
                } else {
                    setTimeout(() => {
                        typeWriter(element, txt, 0, 0);
                    }, 2000);
                }
            }
        }

        const speed = 100;  // Change this to control typing speed
        const typewriterElements = document.querySelectorAll('.typewriter');

        typewriterElements.forEach(element => {
          const txt = JSON.parse(element.getAttribute('data-txt'));
          typeWriter(element, txt);
        });

        function expandInfo() {
            const menu = document.getElementById('menu');
            const main = document.getElementById('main');
            const burger = document.getElementById('burger');
            const cross = document.getElementById('burger-x');
            const pageName = document.getElementById('page-name');
            const menuLinks = document.getElementById('menu-links');
            const infoBar = document.getElementById('info-bar')

            main.classList.remove("lg:brightness-75");

            if(infoBar.classList.contains('hidden')){
                infoBar.classList.remove('hidden')
                infoBar.classList.remove('opacity-0')
                infoBar.classList.add('opacity-100')
                menu.classList.remove('w-72');
                menu.classList.add('w-16');
                main.classList.add("brightness-75");

                pageName.classList.remove('hidden');  // Show the page name
                menuLinks.classList.add('hidden');  // Hide the links

                burger.classList.remove('hidden');
                cross.classList.add('hidden');
            } else {
                infoBar.classList.add('hidden')
                infoBar.classList.remove('opacity-100')
                infoBar.classList.add('opacity-0')
                main.classList.remove("brightness-75");
            }
        }

        function expandMenu() {
            const menu = document.getElementById('menu');
            const main = document.getElementById('main');
            const burger = document.getElementById('burger');
            const cross = document.getElementById('burger-x');
            const pageName = document.getElementById('page-name');
