        function expandMenu() {
            const menu = document.getElementById('menu');
            const main = document.getElementById('main');
            const burger = document.getElementById('burger');
            const cross = document.getElementById('burger-x');
            const pageName = document.getElementById('page-name');
            const menuLinks = document.getElementById('menu-links');

            if (menu.classList.contains('w-72')) {
                menu.classList.remove('w-72');
                menu.classList.add('w-16');
                main.classList.remove("brightness-75");

                pageName.classList.remove('hidden');  // Show the page name
                menuLinks.classList.add('hidden');  // Hide the links

                burger.classList.remove('hidden');
                cross.classList.add('hidden');
            } else {
                menu.classList.remove('w-16');
                menu.classList.add('w-72');
                main.classList.add("brightness-75");

                pageName.classList.add('hidden');  // Hide the page name
                menuLinks.classList.remove('hidden');  // Show the links

                burger.classList.add('hidden');
                cross.classList.remove('hidden');
            }
        }
    </script>
